<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="click"
            type="com.netphone.ui.activity.ChangePWActivity.onClick" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/titlebar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp12"
            android:src="@color/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@color/white"

            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:lines="1"
                android:text="@string/input_old_password"
                android:textColor="@color/textcolor_black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dp8"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/old_passowrd_hint"
                android:text=""
                android:textColor="@color/textcolor_gray"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_alignParentBottom="true"
            android:src="@color/line_view" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dp12"
            android:src="@color/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:lines="1"
                android:text="@string/input_new_password"
                android:textColor="@color/textcolor_black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dp8"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/new_passowrd_hint"
                android:text=""
                android:textColor="@color/textcolor_gray"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_alignParentBottom="true"
            android:src="@color/line_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp14"
                android:lines="1"
                android:text="@string/input_new_password_again"
                android:textColor="@color/textcolor_black"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dp8"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/sure_passowrd_hint"
                android:text=""
                android:textColor="@color/textcolor_gray"
                android:textSize="14dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_alignParentBottom="true"
            android:src="@color/line_view" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_blue_bg"
            android:onClick="@{click.submit}"
            android:text="@string/text_sure"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</layout>